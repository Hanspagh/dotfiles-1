# vim: filetype=muttrc

unmailboxes *
set imap_user = "$my_education_email"
set imap_pass = "$my_education_password"
set smtp_url = "smtp://$my_education_email@smtp.office365.com:587/"
set smtp_pass = "$my_education_password"
set from = "$my_education_email"
set realname = "$my_name"
set folder = "imaps://outlook.office365.com:993"
set spoolfile = "+INBOX"
set postponed = "+Drafts"
set trash = "+Deleted Items"
set record = "+Sent Items"
mailboxes "+INBOX" "+Drafts" "+Deleted Items" "+Sent Items" "+Junk Email"

set status_format = "$from: %f [Msgs:%?M?%M/?%m%?n? New:%n?%?o? Old:%o?%?d? Del:%d?%?F? Flag:%F?%?t? Tag:%t?%?p? Post:%p?%?b? Inc:%b?%?l? %l?]"

macro index ,i "<change-folder>=INBOX<enter>" "Go to Inbox"
macro index ,s "<change-folder>=Sent Items<enter>" "Go to Sent"
macro index ,d "<change-folder>=Drafts<enter>" "Go to Drafts"
macro index ,j "<change-folder>=Junk Email<enter>" "Go to Junk"
macro index ,t "<change-folder>=Deleted Items<enter>" "Go to Trash"

account-hook $folder "set imap_user=$my_education_email imap_pass=$my_education_password"
