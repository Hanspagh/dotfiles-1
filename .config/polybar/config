[colors]
background = ${xrdb:color0:#222}
background-alt = ${xrdb:color3:#222}
foreground = ${xrdb:color15:#222}
foreground-alt =  ${xrdb:color2:#555}
highlight = ${xrdb:color4}

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5

[bar/main]
monitor = ${env:MONITOR}
width = 100%
height = 25
;offset-x = 1%
offset-y = 0%
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #f00

;border-bottom = 0
;border-top = 15
;border-right = 25
;border-left = 25
border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 2
padding top = 2
padding bottom = 2

module-margin-left = 1
module-margin-right = 1

font-0 = "iosevka medium:size=10;0"
font-1 = "iosevka medium:size=10;0"  
font-2 = "iosevka medium:size=10;0"
font-3 = "Noto Sans:size=12;0"
font-4 = "Misc Fixed:size=8;0"

modules-left = i3index
modules-center = mpd
modules-right = volume keyboard date 

;fix tray position
;override-redirect = true

tray-detached = false
tray-position = right
tray-offset-x = 0
tray-offset-y = 0
tray-maxsize = 16
tray-padding = 0
tray-scale = 1
tray-background = ${colors.background}

[bar/secondary]
! Same as primary with no tray
monitor = ${env:MONITOR}
width = 100%
height = 20
;offset-x = 1%
offset-y = 1%
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #f00

;border-bottom = 0
;border-top = 15
;border-right = 25
;border-left = 25
border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = "iosevka:size=10;0"
font-1 = "iosevka:size=10;0"  
font-2 = "iosevka:size=10;0"
font-3 = "Noto Sans:size=12;0"
font-4 = "Misc Fixed:size=8;0"

modules-left = i3index
modules-center = mpd
modules-right = volume keyboard date

tray-position = 

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%
label-foreground = ${colors.foreground}

[module/i3]
type = internal/i3
format = <label-state><label-mode>

index-sort = true
enable-click = false
enable-scroll = false

ws-icon-0 = 0;*
ws-icon-default = ‚óã

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode = " %mode% "
label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.background}

; focused = Active workspace on focused monitor
label-focused = " ‚óè "
label-focused-foreground = ${colors.highlight}
label-focused-background = ${colors.background}

; unfocused = Inactive workspace on any monitor
label-unfocused = " %icon% "
label-unfocused-foreground = ${colors.foreground}
label-unfocused-background = ${colors.background}

; urgent = Workspace with urgency hint set
label-urgent = " ‚óè "
label-urgent-foreground = ${colors.foreground-alt}
label-urgent-background = ${colors.background}

[module/i3index]
type = internal/i3
format = <label-state>
index-sort = true

label-focused-foreground = ${colors.highlight}
label-unfocused-foreground = ${colors.foreground}

[module/date]
type = internal/date
interval = 5

date = "%D"

time = %I:%M
time-alt = %H:%M:%S

;format-prefix = ÔÑ≥ 
format-prefix-foreground = ${colors.foreground}

label = %date% %time%

[module/mpd]
type = internal/mpd

host = 127.0.0.1
port = 6600

; Seconds to sleep between progressbar/song timer sync, Default: 1
interval = 1

label-song = ùÑû %artist% - %title%
label-offline = üéú mpd is offline

[module/current-song-spotify]
type = custom/script
exec = ~/.config/polybar/spotify.sh %artist% - %title%
tail = true
interval = 2

[module/volume]
type = internal/volume

format-volume = <label-volume> <bar-volume>
label-volume = VOL
label-volume-foreground = ${root.foreground}

format-muted-prefix = "ÓàÇ "
format-muted-foreground = ${colors.foreground-alt}
label-muted = sound muted

bar-volume-width = 10
bar-volume-foreground-0 = ${colors.foreground}
bar-volume-foreground-1 = ${colors.foreground}
bar-volume-foreground-2 = ${colors.foreground}
bar-volume-foreground-3 = ${colors.foreground}
bar-volume-foreground-4 = ${colors.foreground}
bar-volume-foreground-5 = ${colors.foreground}
bar-volume-foreground-6 = ${colors.foreground-alt}
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ‚îÄ
bar-volume-fill-font = 2
bar-volume-empty = ‚îÄ
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/keyboard]
type = internal/xkeyboard

format = <label-layout>
label = layout = %name%
label-layout-background = ${colors.background}
label-layout-foreground = ${colors.foreground}
