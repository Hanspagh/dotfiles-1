;=====================================================
;
;   To learn more about how to configure Polybar
;   go to https://github.com/jaagr/polybar
;
;   The README contains alot of information
;
;=====================================================

[colors]
background = ${xrdb:color0:#222}
background-alt = ${xrdb:color3:#222}
foreground = ${xrdb:color15:#222}
foreground-alt =  ${xrdb:color2:#555}
highlight = ${xrdb:color4}

[bar/main]
monitor = ${env:MONITOR}
width = 100%
height = 20
;offset-x = 1%
offset-y = 1%
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #f00

;border-bottom = 0
;border-top = 15
;border-right = 25
;border-left = 25
border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = "lucy tewi:size=10;0"
font-1 = "lucy tewi:size=10;0"  
font-2 = "lucy tewi:size=10;0"
font-3 = "Noto Sans:size=12;0"
font-4 = "Misc Fixed:size=8;0"

modules-left = i3index
modules-center = current-song
modules-right = date

tray-detached = false
tray-position = right
tray-offset-x = 0
tray-offset-y = 0
tray-maxsize = 16
tray-padding = 0
tray-scale = 1
tray-background = ${colors.background}


! Same as primary with no tray
[bar/secondary]
monitor = ${env:MONITOR}
width = 100%
height = 20
;offset-x = 1%
offset-y = 1%
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #f00

;border-bottom = 0
;border-top = 15
;border-right = 25
;border-left = 25
border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = "lucy tewi:size=10;0"
font-1 = "lucy tewi:size=10;0"  
font-2 = "lucy tewi:size=10;0"
font-3 = "Noto Sans:size=12;0"
font-4 = "Misc Fixed:size=8;0"

modules-left = i3index
modules-center = current-song
modules-right = date

tray-position = 

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%
label-foreground = ${colors.foreground}

[module/i3]
type = internal/i3
format = <label-state><label-mode>

index-sort = true
enable-click = false
enable-scroll = false

ws-icon-0 = 0;*
ws-icon-default = ○

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode = " %mode% "
label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.background}

; focused = Active workspace on focused monitor
label-focused = " ● "
label-focused-foreground = ${colors.highlight}
label-focused-background = ${colors.background}

; unfocused = Inactive workspace on any monitor
label-unfocused = " %icon% "
label-unfocused-foreground = ${colors.foreground}
label-unfocused-background = ${colors.background}

; urgent = Workspace with urgency hint set
label-urgent = " ● "
label-urgent-foreground = ${colors.foreground-alt}
label-urgent-background = ${colors.background}

[module/i3index]
type = internal/i3
format = <label-state>
index-sort = true

label-focused-foreground = ${colors.highlight}
label-unfocused-foreground = ${colors.foreground}

[module/date]
type = internal/date
interval = 5

date = "%D"

time = %I:%M
time-alt = %H:%M:%S

;format-prefix =  
format-prefix-foreground = ${colors.foreground}

label = %date% %time%

[module/current-song]
type = custom/script
exec = ~/.config/polybar/spotify.sh %artist% - %title%
tail = true
interval = 2
