#!/usr/bin/env bash
#
# Script to set colors generated by 'wal'
# https://github.com/dylanaraps/wal

# Source generated colors.
source "${HOME}/.cache/wal/colors.sh"

reload_dunst() {
    pkill dunst
    dunst -config ~/.config/dunst/dunstrc \
        -lb "${color0:-#F0F0F0}" \
        -nb "${color0:-#F0F0F0}" \
        -cb "${color0:-#F0F0F0}" \
        -lf "${color15:=#000000}" \
        -bf "${color15:=#000000}" \
        -cf "${color15:=#000000}" \
        -nf "${color15:=#000000}" \
        -lfr "${color2:=#000000}" \
        -nfr "${color2:=#000000}" \
        -cfr "${color2:=#000000}" \
        -fn "${DUNST_FONT:-Iosevka 8}" \
        -geometry "${DUNST_SIZE:-300x30-10+30}" &
}

main() {
    reload_dunst &
}

main
