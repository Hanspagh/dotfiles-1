! urvxt setup
URxvt*perl-ext-common:  resize-font
URxvt*font:             xft:iosevka:size=12:antialias=true:hinting=true
URxvt*boldFont:         xft:iosevka:size=12:style=Bold:antialias=true:hinting=true
URxvt*italicFont:       xft:iosevka:size=12style=Italic:antialias=true:hinting=true
URxvt*urlLauncher:      firefox  
URxvt*scrollBar:        false
URxvt*scrollBar_right:  true
URxvt*scrollColor:      #444444
URxvt*dynamicColors:    on

! rofi setup
rofi.color-enabled: true
rofi.separator-style:       solid
rofi.font:                  iosevka 14
rofi.bw:                    2
rofi.columns:               1
rofi.yoffset:               0
rofi.fake-transparency:     false
rofi.hide-scrollbar:        true
rofi.opacity:               90

rofi.location:              0
rofi.width:                 30
rofi.lines:                 10
rofi.fixed-num-lines:       true
